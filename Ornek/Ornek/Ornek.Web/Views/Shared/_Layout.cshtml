<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Örnek MVC - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-success mb-4">
        <div class="container">
            <a class="navbar-brand" asp-controller="Haftalar" asp-action="Index">Örnek MVC</a>
            <div class="navbar-nav">
                <a class="nav-link" asp-controller="Haftalar" asp-action="Hafta1">Hafta 1</a>
                <a class="nav-link" asp-controller="Haftalar" asp-action="Hafta2">Hafta 2</a>
                <a class="nav-link" asp-controller="Haftalar" asp-action="Hafta3">Hafta 3</a>
                <a class="nav-link" asp-controller="Haftalar" asp-action="Hafta4">Hafta 4</a>
                <a class="nav-link" asp-controller="Haftalar" asp-action="Hafta5">Hafta 5</a>
                <a class="nav-link" asp-controller="Haftalar" asp-action="Hafta6Liste">Hafta 6</a>
                <a class="nav-link" asp-controller="Haftalar" asp-action="Hafta7">Hafta 7</a>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="text-center py-4 mt-5 bg-white border-top">
        <small>&copy; @DateTime.Now.Year Örnek MVC Projesi</small>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
