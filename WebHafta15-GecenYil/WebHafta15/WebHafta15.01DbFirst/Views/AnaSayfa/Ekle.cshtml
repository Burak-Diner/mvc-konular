

@model WebHafta15._01DbFirst.Models.Urun

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form asp-controller="AnaSayfa" asp-action="Ekle" method="post">
    <input type="text" asp-for="@Model.UrunAdi" placeholder="Ürün adı" /> <br />
    <select asp-for="@Model.KatId">
        @foreach(WebHafta15._01DbFirst.Models.Kategori item in ViewBag.UrunKategorileri)
        {
            <option value="@item.KategoriId">@item.KategoriAdi</option>
        }
       </select>
    <br />
    <input type="submit" value="Ekle" />
</form>